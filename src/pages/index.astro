---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
<head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
</head>
<body>
        <Header />
        <main>
                <section class="hero">
                        <div class="hero-media" role="img" aria-label="Calm hospitality-inspired healthcare scene"></div>
                        <div class="hero-overlay"></div>
                        <div class="hero-content">
                                <p class="eyebrow">Patient Experience Reimagined</p>
                                <h1>Five-Star Hospitality for Healthcare</h1>
                                <p class="lede">
                                        Transforming patient care with ultra-luxury service standards and medical expertise.
                                </p>
                                <div class="hero-actions">
                                        <a class="button primary" href="#contact">Schedule a Consultation</a>
                                        <a class="button ghost" href="#difference">Discover the Difference</a>
                                </div>
                        </div>
                </section>

                <section id="overview" class="section intro">
                        <div class="section-header">
                                <p class="eyebrow">Welcome to The Medicality</p>
                                <h2>Concierge-caliber care for modern hospitals</h2>
                        </div>
                        <p class="intro-text">
                                The Medicality is a patient care consulting firm that blends the art of luxury hospitality with the
                                science of healthcare. We partner with hospitals to transform traditional clinical environments into
                                five-star, patient-centered experiences. By leveraging world-class service principles from ultra-luxury
                                hotels, we elevate every aspect of the patient journey while empowering caregivers and strengthening
                                your reputation.
                        </p>
                </section>

                <section id="difference" class="section difference">
                        <div class="section-header">
                                <p class="eyebrow">Tailored Transformation</p>
                                <h2>The Medicality Difference</h2>
                                <p class="lede">
                                        We embed with your teams, drawing on hospitality-grade service to transform culture and outcomes.
                                </p>
                        </div>
                        <div class="pillars">
                                <article class="card">
                                        <div class="icon" aria-hidden="true">❤</div>
                                        <h3>Dual Focus on People</h3>
                                        <p>
                                                We elevate patient satisfaction by uplifting care teams first. A culture of empathy and
                                                respect ensures five-star service at every touchpoint.
                                        </p>
                                </article>
                                <article class="card">
                                        <div class="icon" aria-hidden="true">⇄</div>
                                        <h3>Embedded Transformation</h3>
                                        <p>
                                                Our experts embed for 6–12 months, partnering in real time to implement systems, behaviors,
                                                and documentation that sustain measurable change.
                                        </p>
                                </article>
                                <article class="card">
                                        <div class="icon" aria-hidden="true">★</div>
                                        <h3>Five-Star Standards</h3>
                                        <p>
                                                We translate elite hotel protocols into clinical care—from personalized greetings to immediate
                                                service recovery—so patients feel the difference and scores reflect it.
                                        </p>
                                </article>
                        </div>
                </section>

                <section id="services" class="section services">
                        <div class="section-header">
                                <p class="eyebrow">What We Do</p>
                                <h2>Comprehensive consulting for experience and culture</h2>
                                <p class="lede">Hospitality-inspired systems that work for patients and the teams who serve them.</p>
                        </div>
                        <div class="service-grid">
                                <article class="service-card">
                                        <div class="sketch"></div>
                                        <h3>Hospitality-Inspired Process Redesign</h3>
                                        <p>
                                                We refine every step from pre-arrival to post-discharge with luxury hospitality cues that add
                                                calm, clarity, and confidence to your workflows.
                                        </p>
                                </article>
                                <article class="service-card">
                                        <div class="sketch"></div>
                                        <h3>Empathy-Driven Staff Training</h3>
                                        <p>
                                                Executive-to-frontline coaching on empathy, communication, and service excellence builds a
                                                consistent, human-first experience across your hospital.
                                        </p>
                                </article>
                                <article class="service-card">
                                        <div class="sketch"></div>
                                        <h3>Employee Experience Consulting</h3>
                                        <p>
                                                We strengthen the employee lifecycle—hiring, onboarding, retention, and growth—creating an
                                                energized culture that keeps caregivers thriving.
                                        </p>
                                </article>
                        </div>
                        <div class="cta-banner">
                                <div>
                                        <p class="eyebrow">Ready to elevate?</p>
                                        <h3>Bring five-star service to your hospital.</h3>
                                </div>
                                <a class="button primary" href="#contact">Start the conversation</a>
                        </div>
                </section>

                <section id="contact" class="section contact">
                        <div class="section-header">
                                <p class="eyebrow">Contact Us</p>
                                <h2>Start the transformation</h2>
                                <p class="lede">Ready to elevate your patient experience? Let’s discuss what’s possible.</p>
                        </div>
                        <div class="contact-grid">
                                <form class="contact-form">
                                        <div class="field">
                                                <label for="name">Name</label>
                                                <input id="name" name="name" type="text" placeholder="Your name" />
                                        </div>
                                        <div class="field">
                                                <label for="email">Email</label>
                                                <input id="email" name="email" type="email" placeholder="you@example.com" />
                                        </div>
                                        <div class="field">
                                                <label for="organization">Organization</label>
                                                <input
                                                        id="organization"
                                                        name="organization"
                                                        type="text"
                                                        placeholder="Hospital or health system"
                                                />
                                        </div>
                                        <div class="field full">
                                                <label for="message">Message</label>
                                                <textarea
                                                        id="message"
                                                        name="message"
                                                        rows="4"
                                                        placeholder="Share your goals, timeline, or questions"
                                                ></textarea>
                                        </div>
                                        <button type="submit" class="button primary">Send Message</button>
                                        <p class="privacy">We respond within one business day. Your information stays private.</p>
                                </form>
                                <div class="contact-details">
                                        <div class="note">
                                                <h3>Connect directly</h3>
                                                <p>info@themedicality.com</p>
                                                <p>(555) 555-0150</p>
                                        </div>
                                        <div class="note">
                                                <h3>Offices</h3>
                                                <p>New York • London • Dubai</p>
                                                <p>By appointment only</p>
                                        </div>
                                </div>
                        </div>
                </section>
        </main>
        <Footer />
</body>
</html>

<style>
        .hero {
                position: relative;
                min-height: 86vh;
                border-bottom: 1px solid var(--pencil-line);
                overflow: hidden;
                background: var(--paper);
        }

        .hero-media {
                position: absolute;
                inset: 0;
                background-image: url('https://images.unsplash.com/photo-1545239351-1141bd82e8a6?auto=format&fit=crop&w=1600&q=80');
                background-size: cover;
                background-position: center;
                filter: grayscale(40%) contrast(95%) brightness(105%);
                mix-blend-mode: multiply;
        }

        .hero-overlay {
                position: absolute;
                inset: 0;
                background: radial-gradient(circle at 20% 30%, rgba(255, 255, 255, 0.6), rgba(244, 239, 230, 0.85));
                border-bottom: 1px solid var(--pencil-line);
        }

        .hero-content {
                position: relative;
                max-width: 720px;
                margin: 0 auto;
                padding: clamp(3rem, 8vw, 6rem) 1.5rem clamp(4rem, 9vw, 7rem) 1.5rem;
                text-align: center;
                color: var(--charcoal);
        }

        .hero .eyebrow {
                display: inline-block;
                padding: 0.35rem 0.7rem;
                border: 1px solid var(--pencil-line);
                border-radius: 999px;
                text-transform: uppercase;
                letter-spacing: 0.18em;
                font-size: 0.75rem;
                margin-bottom: 1.2rem;
                background: rgba(255, 255, 255, 0.65);
        }

        .hero .lede {
                font-size: 1.1rem;
                max-width: 580px;
                margin: 1rem auto 1.5rem auto;
                color: var(--soft-ink);
        }

        .hero-actions {
                display: flex;
                justify-content: center;
                gap: 0.85rem;
                flex-wrap: wrap;
        }

        .section {
                padding: clamp(3rem, 8vw, 5rem) 0;
                position: relative;
        }

        .section::after {
                content: '';
                position: absolute;
                left: 10%;
                right: 10%;
                bottom: 0;
                height: 1px;
                background: repeating-linear-gradient(90deg, var(--pencil-line), var(--pencil-line) 12px, transparent 12px, transparent 22px);
                opacity: 0.7;
        }

        .section:last-of-type::after {
                display: none;
        }

        .section-header {
                max-width: 900px;
                margin: 0 auto 1.5rem auto;
                text-align: center;
        }

        .eyebrow {
                text-transform: uppercase;
                letter-spacing: 0.2em;
                font-size: 0.8rem;
                color: var(--soft-ink);
                margin-bottom: 0.4rem;
        }

        .lede {
                color: var(--soft-ink);
                margin: 0.3rem auto 0;
        }

        .intro-text {
                max-width: 900px;
                margin: 0 auto;
                font-size: 1.05rem;
                line-height: 1.75;
                color: var(--soft-ink);
                background: var(--card);
                border: 1px solid var(--pencil-line);
                padding: 1.6rem 1.8rem;
                border-radius: 14px;
                box-shadow: -12px 12px 0 rgba(0, 0, 0, 0.04);
        }

        .pillars {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
                gap: 1.2rem;
                margin-top: 2rem;
        }

        .card {
                padding: 1.6rem;
                border: 1px solid var(--pencil-line);
                border-radius: 14px;
                background: linear-gradient(135deg, #fbf8f2, #f3ede4);
                box-shadow: -10px 10px 0 rgba(0, 0, 0, 0.03);
        }

        .icon {
                width: 46px;
                height: 46px;
                border: 1px solid var(--pencil-line);
                border-radius: 50%;
                display: grid;
                place-items: center;
                font-size: 1.1rem;
                margin-bottom: 0.8rem;
                background: rgba(255, 255, 255, 0.8);
                box-shadow: inset -4px -4px 0 rgba(0, 0, 0, 0.02);
        }

        .services .service-grid {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
                gap: 1.4rem;
                margin-top: 2rem;
        }

        .service-card {
                padding: 1.8rem;
                border: 1px solid var(--pencil-line);
                border-radius: 16px;
                background: var(--card);
                position: relative;
                overflow: hidden;
                box-shadow: -10px 10px 0 rgba(0, 0, 0, 0.04);
        }

        .service-card .sketch {
                position: absolute;
                inset: 12px 12px auto auto;
                width: 64px;
                height: 64px;
                border: 1px dashed var(--pencil-line);
                border-radius: 12px;
                background: linear-gradient(45deg, rgba(176, 138, 52, 0.08), rgba(255, 255, 255, 0.6));
                transform: rotate(-4deg);
                pointer-events: none;
        }

        .service-card h3 {
                margin-top: 0.4rem;
                margin-bottom: 0.7rem;
        }

        .cta-banner {
                margin-top: 2.5rem;
                padding: 1.8rem 2rem;
                border: 1px solid var(--pencil-line);
                border-radius: 16px;
                display: flex;
                align-items: center;
                justify-content: space-between;
                gap: 1.2rem;
                background: linear-gradient(120deg, rgba(176, 138, 52, 0.08), rgba(255, 255, 255, 0.85));
                box-shadow: -12px 12px 0 rgba(0, 0, 0, 0.04);
                flex-wrap: wrap;
        }

        .cta-banner h3 {
                margin: 0;
        }

        .contact-grid {
                display: grid;
                grid-template-columns: 1.3fr 0.7fr;
                gap: 1.5rem;
                margin-top: 2rem;
        }

        .contact-form {
                padding: 1.8rem;
                border: 1px solid var(--pencil-line);
                border-radius: 16px;
                background: #fefcf8;
                box-shadow: -12px 12px 0 rgba(0, 0, 0, 0.04);
        }

        .field {
                margin-bottom: 1rem;
                display: flex;
                flex-direction: column;
                gap: 0.35rem;
        }

        .field.full {
                grid-column: span 2;
        }

        label {
                font-size: 0.95rem;
                color: var(--charcoal);
                letter-spacing: 0.02em;
        }

        input,
        textarea {
                padding: 0.8rem 0.9rem;
                border-radius: 12px;
                border: 1px solid var(--pencil-line);
                background: rgba(255, 255, 255, 0.9);
                transition: border-color 0.2s ease, box-shadow 0.2s ease;
        }

        input:focus,
        textarea:focus {
                outline: none;
                border-color: var(--accent);
                box-shadow: 0 0 0 2px rgba(176, 138, 52, 0.15);
        }

        .contact-details {
                display: grid;
                gap: 1rem;
        }

        .note {
                padding: 1.3rem 1.4rem;
                border: 1px solid var(--pencil-line);
                border-radius: 14px;
                background: #fbf8f3;
                box-shadow: -8px 8px 0 rgba(0, 0, 0, 0.03);
        }

        .privacy {
                font-size: 0.9rem;
                color: var(--soft-ink);
                margin-top: 0.6rem;
        }

        .button {
                display: inline-flex;
                align-items: center;
                justify-content: center;
                gap: 0.35rem;
                padding: 0.9rem 1.3rem;
                border-radius: 999px;
                font-weight: 600;
                border: 1px solid var(--pencil-line);
                cursor: pointer;
                transition: transform 0.15s ease, box-shadow 0.2s ease, border-color 0.2s ease, background 0.2s ease;
        }

        .button.primary {
                background: linear-gradient(135deg, rgba(176, 138, 52, 0.25), rgba(255, 255, 255, 0.85));
                color: var(--charcoal);
                box-shadow: -6px 6px 0 rgba(0, 0, 0, 0.05);
        }

        .button.ghost {
                background: rgba(255, 255, 255, 0.7);
        }

        .button:hover {
                transform: translate(-2px, -2px);
                box-shadow: -10px 10px 0 rgba(0, 0, 0, 0.06);
                border-color: var(--accent);
        }

        @media (max-width: 960px) {
                .hero-content {
                        max-width: 640px;
                }

                .contact-grid {
                        grid-template-columns: 1fr;
                }
        }

        @media (max-width: 640px) {
                .hero {
                        min-height: 80vh;
                }

                .service-card .sketch {
                        display: none;
                }

                .cta-banner {
                        flex-direction: column;
                        align-items: flex-start;
                }

                .pillars,
                .services .service-grid {
                        grid-template-columns: 1fr;
                }
        }
</style>
