                </main>
                <Footer />
        </body>
</html>

<style>
        main {
                padding-top: 6rem;
        }

        .hero {
                position: relative;
                width: 100%;
                min-height: 90vh;
                border-radius: 20px;
                overflow: hidden;
                background: #0d1117;
                margin: 2.5rem auto 0;
                display: flex;
                align-items: center;
                justify-content: center;
                box-shadow: var(--box-shadow);
        }

        .hero__media {
                position: absolute;
                inset: 0;
                background: url('https://images.unsplash.com/photo-1502920917128-1aa500764b8a?auto=format&fit=crop&w=1400&q=80')
                        center/cover no-repeat;
                filter: saturate(0.95) brightness(0.8);
                transform: scale(1.02);
        }

        .hero__overlay {
                position: absolute;
                inset: 0;
                background: linear-gradient(120deg, rgba(17, 21, 28, 0.75), rgba(17, 21, 28, 0.55));
        }

        .hero__content {
                position: relative;
                max-width: 720px;
                padding: 2rem;
                text-align: center;
                color: #f5f0e9;
                display: grid;
                gap: 1rem;
        }

        .hero .eyebrow {
                color: rgba(245, 240, 233, 0.85);
        }

        .hero h1 {
                color: #fffef8;
                font-size: clamp(2.6rem, 4vw + 1rem, 4rem);
        }

        .hero .subhead {
                font-size: 1.1rem;
                color: rgba(245, 240, 233, 0.85);
                margin: 0;
        }

        .hero__actions {
                display: flex;
                gap: 1rem;
                justify-content: center;
                flex-wrap: wrap;
        }

        .section {
                margin-top: 5rem;
        }

        .section__header {
                max-width: 720px;
                margin-bottom: 2rem;
        }

        .eyebrow {
                text-transform: uppercase;
                letter-spacing: 0.18em;
                font-size: 0.78rem;
                color: rgba(var(--gray-dark), 0.7);
                margin: 0 0 0.5rem;
        }

        .lead {
                font-size: 1.1rem;
                color: rgba(var(--gray-dark), 0.9);
        }

        .section__intro {
                max-width: 760px;
                color: rgba(var(--gray-dark), 0.85);
        }

        .cards {
                display: grid;
                gap: 1.25rem;
        }

        .cards.three-up {
                grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        }

        .card {
                background: white;
                border-radius: 18px;
                padding: 1.75rem;
                box-shadow: var(--box-shadow);
                border: 1px solid rgba(var(--gray), 0.1);
                display: grid;
                gap: 0.75rem;
                position: relative;
                overflow: hidden;
        }

        .card::after {
                content: '';
                position: absolute;
                inset: 0;
                background: linear-gradient(180deg, transparent, rgba(176, 138, 78, 0.05));
                opacity: 0;
                transition: opacity 0.2s ease;
        }

        .card:hover::after {
                opacity: 1;
        }

        .icon {
                font-size: 1.5rem;
        }

        .services .service-card {
                min-height: 240px;
        }

        .cta-banner {
                margin-top: 2.5rem;
                background: linear-gradient(120deg, rgba(17, 21, 28, 0.92), rgba(17, 21, 28, 0.8));
                color: #f5f0e9;
                padding: 2rem;
                border-radius: 18px;
                display: grid;
                grid-template-columns: 1fr auto;
                gap: 1rem;
                align-items: center;
                box-shadow: var(--box-shadow);
        }

        .cta-banner h3 {
                color: #fffef8;
                margin: 0 0 0.5rem;
        }

        .cta-banner p {
                color: rgba(245, 240, 233, 0.85);
                margin: 0.25rem 0;
        }

        .contact {
                background: white;
                border-radius: 18px;
                padding: 2.5rem;
                box-shadow: var(--box-shadow);
                border: 1px solid rgba(var(--gray), 0.12);
        }

        .contact__content {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
                gap: 2rem;
                align-items: start;
        }

        .contact__intro .contact__details p {
                margin: 0.35rem 0;
        }

        .contact__form {
                display: grid;
                gap: 1rem;
        }

        .form-grid {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
                gap: 1rem;
        }

        label {
                display: grid;
                gap: 0.35rem;
                font-weight: 600;
                color: rgba(var(--gray-dark), 0.9);
        }

        input,
        textarea {
                padding: 0.85rem 0.9rem;
                border-radius: 10px;
                border: 1px solid rgba(var(--gray), 0.2);
                background: #fdfbf7;
                transition: border-color 0.2s ease, box-shadow 0.2s ease;
        }

        input:focus,
        textarea:focus {
                outline: none;
                border-color: var(--accent);
                box-shadow: 0 0 0 3px rgba(176, 138, 78, 0.2);
        }

        .btn {
                display: inline-flex;
                align-items: center;
                justify-content: center;
                gap: 0.4rem;
                padding: 0.9rem 1.3rem;
                border-radius: 999px;
                font-weight: 700;
                letter-spacing: 0.01em;
                text-decoration: none;
                transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease, color 0.2s ease;
                cursor: pointer;
                border: none;
        }

        .btn-primary {
                background: var(--accent);
                color: white;
                box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
        }

        .btn-primary:hover {
                background: var(--accent-dark);
                transform: translateY(-1px);
                box-shadow: 0 14px 30px rgba(0, 0, 0, 0.16);
        }

        .btn-secondary {
                background: rgba(245, 240, 233, 0.18);
                color: #fffef8;
                border: 1px solid rgba(245, 240, 233, 0.4);
        }

        .btn-secondary:hover {
                background: rgba(245, 240, 233, 0.3);
        }

        .privacy {
                font-size: 0.95rem;
                color: rgba(var(--gray-dark), 0.7);
                margin: 0;
        }

        @media (max-width: 900px) {
                .hero {
                        min-height: 80vh;
                        margin-top: 1rem;
                }

                .cta-banner {
                        grid-template-columns: 1fr;
                        text-align: left;
                }
        }

        @media (max-width: 640px) {
                main {
                        padding-top: 5rem;
                }

                .hero {
                        border-radius: 16px;
                }

                .hero__content {
                        padding: 1.5rem;
                }
        }
</style>
