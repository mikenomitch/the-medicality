---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
        <head>
                <BaseHead title={`${SITE_TITLE} | Ultra-Luxury Patient Experience Consulting`} description={SITE_DESCRIPTION} />
        </head>
        <body>
                <Header />
                <main>
                        <section class="hero" aria-labelledby="hero-title">
                                <div class="hero__media" role="img" aria-label="Placeholder for a cinematic montage blending hospitality and healthcare excellence."></div>
                                <div class="hero__overlay"></div>
