---
const today = new Date();
---

<footer class="footer">
        <div class="footer__brand">
                <div class="mark">TM</div>
                <div class="copy">
                        <p class="title">The Medicality</p>
                        <p class="tagline">Five-star hospitality for healthcare.</p>
                </div>
        </div>
        <div class="footer__meta">
                <p>&copy; {today.getFullYear()} The Medicality. All rights reserved.</p>
                <p class="note">Privacy-first. We respond to all inquiries within 1 business day.</p>
        </div>
</footer>

<style>
        .footer {
                background: #11151c;
                color: #f5f0e9;
                padding: 3.5rem 1.5rem;
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
                gap: 1.5rem;
                align-items: center;
        }

        .footer__brand {
                display: flex;
                align-items: center;
                gap: 1rem;
        }

        .mark {
                width: 50px;
                height: 50px;
                border-radius: 50%;
                display: inline-flex;
                align-items: center;
                justify-content: center;
                background: linear-gradient(135deg, var(--accent), var(--accent-dark));
                font-weight: 700;
                letter-spacing: 0.05em;
        }

        .copy .title {
                margin: 0;
                font-family: "Cormorant Garamond", "Playfair Display", serif;
                font-size: 1.25rem;
        }

        .copy .tagline {
                margin: 0.25rem 0 0;
                color: rgba(245, 240, 233, 0.8);
                font-size: 0.95rem;
        }

        .footer__meta {
                text-align: left;
                color: rgba(245, 240, 233, 0.8);
                line-height: 1.5;
        }

        .footer__meta p {
                margin: 0.25rem 0;
        }

        .note {
                font-size: 0.95rem;
        }

        @media (max-width: 640px) {
                .footer {
                        text-align: left;
                }
        }
</style>
