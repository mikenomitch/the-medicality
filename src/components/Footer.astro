---
const today = new Date();
---

<footer>
        <div class="content">
                <div>
                        <p class="eyebrow">The Medicality</p>
                        <p class="tagline">Transforming patient care with five-star hospitality.</p>
                </div>
                <div class="contacts">
                        <a href="mailto:info@themedicality.com">info@themedicality.com</a>
                        <span>|</span>
                        <span>+1 (555) 987-1234</span>
                </div>
                <p class="copyright">&copy; {today.getFullYear()} The Medicality. All rights reserved.</p>
        </div>
</footer>
<style>
        footer {
                background: #11151a;
                color: #f3f1ed;
                padding: 3rem 3vw 3.5rem;
        }

        .content {
                max-width: 1200px;
                margin: 0 auto;
                display: flex;
                flex-direction: column;
                gap: 0.8rem;
                align-items: flex-start;
        }

        .eyebrow {
                letter-spacing: 0.22em;
                text-transform: uppercase;
                font-size: 0.85rem;
                color: #d7c6a5;
                margin: 0;
        }

        .tagline {
                margin: 0;
                font-size: 1rem;
        }

        .contacts {
                display: flex;
                gap: 0.65rem;
                flex-wrap: wrap;
                font-weight: 600;
        }

        .contacts a {
                color: #f3f1ed;
        }

        .contacts span {
                color: #c5c1ba;
        }

        .copyright {
                margin: 0.5rem 0 0;
                color: #b3ada3;
                font-size: 0.95rem;
        }
        @media (max-width: 720px) {
                footer {
                        padding: 2.5rem 1.4rem;
                }
        }
</style>
