---
const today = new Date();
---

<footer class="footer">
  <div class="footer-inner">
    <div class="brand">
      <span class="brand-mark">M</span>
      <div>
        <div class="brand-name">The Medicality</div>
        <div class="tagline">Five-star hospitality for healthcare.</div>
      </div>
    </div>
    <div class="meta">&copy; {today.getFullYear()} The Medicality. All rights reserved.</div>
  </div>
</footer>

<style>
  .footer {
    background: rgb(22, 24, 26);
    color: rgba(255, 255, 255, 0.78);
    padding: 2.8rem 1.5rem 3.6rem;
  }

  .footer-inner {
    max-width: 1320px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
  }

  .brand {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    font-weight: 600;
  }

  .brand-mark {
    width: 46px;
    height: 46px;
    border-radius: 50%;
    background: linear-gradient(145deg, #c59f5d, #8a671f);
    color: #fffaf1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: 'Playfair Display', 'Times New Roman', serif;
    font-size: 1.2rem;
    box-shadow: 0 14px 30px rgba(0, 0, 0, 0.3);
  }

  .brand-name { font-family: 'Playfair Display', 'Times New Roman', serif; letter-spacing: 0.01em; color: #fffaf1; }
  .tagline { font-weight: 400; font-size: 0.95rem; color: rgba(255, 255, 255, 0.7); }

  .meta { font-size: 0.95rem; color: rgba(255, 255, 255, 0.65); }

  @media (max-width: 720px) {
    .footer-inner { flex-direction: column; align-items: flex-start; }
  }
</style>
