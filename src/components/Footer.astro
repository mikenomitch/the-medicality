---
const today = new Date();
---

<footer>
        <div class="footer-inner">
                <div>
                        <p class="brand">The Medicality</p>
                        <p class="tagline">Hospitality-grade patient experience.</p>
                </div>
                <div class="meta">
                        <p>&copy; {today.getFullYear()} The Medicality. Crafted with care.</p>
                        <p class="contact">info@themedicality.com â€¢ (555) 555-0150</p>
                </div>
        </div>
</footer>
<style>
        footer {
                padding: 2.5rem 1.5rem 3rem 1.5rem;
                background: #1b1b18;
                color: #f7f3ea;
        }

        .footer-inner {
                max-width: 1200px;
                margin: 0 auto;
                display: flex;
                align-items: center;
                justify-content: space-between;
                gap: 2rem;
                flex-wrap: wrap;
        }

        .brand {
                font-family: 'Playfair Display', serif;
                font-weight: 600;
                letter-spacing: 0.08em;
                margin: 0 0 0.25rem 0;
        }

        .tagline {
                margin: 0;
                color: rgba(247, 243, 234, 0.8);
        }

        .meta {
                text-align: right;
                font-size: 0.95rem;
                color: rgba(247, 243, 234, 0.85);
        }

        .meta p {
                margin: 0.2rem 0;
        }

        .contact {
                letter-spacing: 0.02em;
        }

        @media (max-width: 768px) {
                .footer-inner {
                        flex-direction: column;
                        align-items: flex-start;
                        text-align: left;
                }

                .meta {
                        text-align: left;
                }
        }
</style>
