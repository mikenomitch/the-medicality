---
import { SITE_TITLE } from '../consts';
---

<header>
        <nav>
                <div class="logo">
                        <span class="eyebrow">The</span>
                        <a href="/">{SITE_TITLE}</a>
                </div>
                <div class="nav-links">
                        <a href="#overview">Overview</a>
                        <a href="#difference">Difference</a>
                        <a href="#services">Services</a>
                        <a class="cta" href="#contact">Contact</a>
                </div>
        </nav>
</header>
<style>
        header {
                position: sticky;
                top: 0;
                z-index: 10;
                backdrop-filter: blur(10px);
                background: rgba(244, 239, 230, 0.8);
                border-bottom: 1px solid var(--pencil-line);
        }

        nav {
                max-width: 1200px;
                margin: 0 auto;
                padding: 0.85rem 1.5rem;
                display: flex;
                align-items: center;
                justify-content: space-between;
                gap: 1rem;
        }

        .logo {
                display: flex;
                align-items: center;
                gap: 0.45rem;
                font-family: 'Playfair Display', serif;
                letter-spacing: 0.04em;
                color: var(--charcoal);
        }

        .logo a {
                font-size: 1.1rem;
                font-weight: 600;
        }

        .eyebrow {
                font-size: 0.75rem;
                text-transform: uppercase;
                color: var(--soft-ink);
                letter-spacing: 0.1em;
        }

        .nav-links {
                display: flex;
                align-items: center;
                gap: 0.75rem;
                font-size: 0.95rem;
        }

        .nav-links a {
                padding: 0.4rem 0.75rem;
                border-radius: 999px;
                border: 1px solid transparent;
                transition: border-color 0.2s ease, color 0.2s ease, background 0.2s ease;
        }

        .nav-links a:hover {
                border-color: var(--pencil-line);
                color: var(--charcoal);
        }

        .nav-links .cta {
                border: 1px solid var(--pencil-line);
                background: linear-gradient(135deg, rgba(208, 182, 122, 0.18), rgba(255, 255, 255, 0.65));
                box-shadow: 0 2px 0 rgba(0, 0, 0, 0.04);
        }

        .nav-links .cta:hover {
                background: linear-gradient(135deg, rgba(208, 182, 122, 0.28), rgba(255, 255, 255, 0.85));
                border-color: var(--accent);
        }

        @media (max-width: 768px) {
                nav {
                        padding: 0.75rem 1.1rem;
                }

                .nav-links {
                        gap: 0.4rem;
                }

                .nav-links a {
                        font-size: 0.9rem;
                        padding: 0.35rem 0.65rem;
                }
        }
</style>
