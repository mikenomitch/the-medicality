---
import { SITE_TITLE } from '../consts';
---

<header>
        <div class="nav-shell">
                <a class="logo" href="/">{SITE_TITLE}</a>
                <img src="/logo.png" alt="The Medicality Logo" class="header__logo" />
                <nav>
                        <a href="#intro">About</a>
                        <a href="#difference">Difference</a>
                        <a href="#about">Team</a>
                        <a href="#contact">Contact</a>
                </nav>
        </div>
</header>

<style>
        header {
                position: sticky;
                top: 0;
                z-index: 20;
                backdrop-filter: blur(12px);
                background: rgba(248, 243, 235, 0.85);
                border-bottom: 1px dashed rgba(37, 51, 74, 0.18);
                margin-bottom: 1.5rem;
        }

        .nav-shell {
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 1rem 1.5rem;
                max-width: 1200px;
                margin: 0 auto;
                text-transform: uppercase;
                letter-spacing: 0.08em;
                font-size: 0.9rem;
        }

        .logo {
                font-family: 'Cormorant Garamond', 'Times New Roman', serif;
                font-size: 1.35rem;
                font-weight: 600;
                color: var(--charcoal);
                border: none;
                text-decoration: none;
        }

        .header__logo {
                display: none;
                width: 70px;
                height: 70px;
                object-fit: cover;
                border-radius: 50%;
                border: 2px solid rgba(37, 51, 74, 0.2);
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        nav {
                display: flex;
                gap: 1rem;
        }

        nav a {
                color: var(--charcoal);
                padding: 0.5rem 0.65rem;
                border: 1px dashed transparent;
                border-radius: 999px;
                transition: all 0.2s ease;
        }

        nav a:hover {
                border-color: rgba(37, 51, 74, 0.35);
                background: rgba(123, 96, 61, 0.12);
                color: var(--accent-ink);
        }

        @media (max-width: 780px) {
                .nav-shell {
                        padding: 0.85rem 1.15rem;
                        gap: 0.75rem;
                }

                nav {
                        display: none;
                }
        }

        @media (max-width: 480px) {
                .header__logo {
                        display: block;
                }

                .logo {
                        font-size: 1.6rem;
                }
        }
</style>
