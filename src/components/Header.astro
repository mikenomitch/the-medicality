---
import { SITE_TITLE } from '../consts';
---

<header class="site-header">
  <nav class="nav">
    <a href="#hero" class="brand" aria-label={SITE_TITLE}>
      <span class="brand-mark">M</span>
      <span class="brand-name">The Medicality</span>
    </a>
    <div class="nav-links">
      <a href="#about">About</a>
      <a href="#difference">Difference</a>
      <a href="#services">Services</a>
      <a href="#contact" class="cta-link">Contact</a>
    </div>
  </nav>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 10;
    background: rgba(248, 245, 240, 0.92);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(22, 24, 26, 0.05);
  }

  .nav {
    max-width: 1320px;
    margin: 0 auto;
    padding: 0.9rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .brand {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    font-weight: 600;
    color: #0f172a;
    text-decoration: none;
  }

  .brand-mark {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(145deg, #c59f5d, #9f7a32);
    color: #fffaf1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: 'Playfair Display', 'Times New Roman', serif;
    font-size: 1.2rem;
    box-shadow: 0 10px 22px rgba(181, 138, 56, 0.35);
  }

  .brand-name {
    font-family: 'Inter', system-ui;
    letter-spacing: 0.01em;
  }

  .nav-links {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
  }

  .nav a {
    color: rgb(43, 46, 52);
    font-weight: 500;
    padding: 0.65rem 0.9rem;
    border-radius: 999px;
    transition: color 200ms ease, background 200ms ease;
    text-decoration: none;
  }

  .nav a:hover { color: #8a671f; background: rgba(181, 138, 56, 0.08); }

  .cta-link {
    border: 1px solid rgba(22, 24, 26, 0.12);
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.35);
  }

  @media (max-width: 760px) {
    .nav { padding: 0.9rem 1rem; }
    .nav-links { gap: 0.4rem; }
    .nav a { padding: 0.55rem 0.7rem; font-size: 0.95rem; }
    .brand-name { display: none; }
  }
</style>
